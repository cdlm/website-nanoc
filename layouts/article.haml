%h1= @item[:title]

- if img = article_image(@item)
  .right<
    - img_credits = "#{img[:title]} â€” #{img[:credits]}"
    - if img[:link]
      %a{:href => img[:link]}<
        %img{:src => relative_path_to(img),
             :alt => img[:title],
             :title => "#{img_credits} #{img[:link]}"}
    - else
      %img.right{:src => relative_path_to(img),
                 :alt => img[:title],
                 :title => img_credits}

.postmeta
  %span.date= @item[:created_at].strftime "%d %b %Y"
  - unless @item[:tags].nil? or @item[:tags].empty?
    %span.tags>
      in
      = tags_for @item, :base_url => info(:tag_base_url)
  - if @item[:prev].nil?
    %span.previous> (oldest)
  - else
    = link_to "&larr;&nbsp;previous", @item[:prev], :class => 'previous'
  - if @item[:next].nil?
    %span.next> (newest)
  - else
    = link_to "next&nbsp;&rarr;", @item[:next], :class => 'next'

= content_for(@item, :summary)

= yield

